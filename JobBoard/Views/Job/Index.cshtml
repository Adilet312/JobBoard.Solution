@using JobPost.Models;
@using System.Collections.Generic;

<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Job Board</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
        <h1>Contactl details</h1>
        @if (Model.GetSize() == 0)
        {
            <p>There is no contact.</p>
        }
        @foreach(JobOpening contacts in Model)
        {
            <ul>
                <li>@contacts.GetContact(0)</li>
            </ul>
        }
        @{
            Contact myContacts = new Contact();
        }
        <p>@myContacts.ToString()</p>
        <a href="/jobs/new">Add more contacts</a><br>
        <a href="/">Go Home</a>
    </body>
</html>